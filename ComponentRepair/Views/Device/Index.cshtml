@model IEnumerable<ComponentRepair.Models.Device>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Device List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Device" asp-action="Create" class="btn btn-primary">Create New Device</a>
        </div>
    </div>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
             <thead>
                 <tr>
                     <th>
                         Device Name
                     </th>
                     <th>
                         Device Price In
                     </th>
                     <th>
                        Device Price Result
                     </th>
                     <th></th>
                 </tr>
             </thead>
             <tbody>
                 @foreach(var obj in Model)
                {
                    <tr>
                        <td width=50%>@obj.Name</td>
                        <td width=30%>@obj.Pricein</td>
                        <td width=30%>@obj.Pricerezult</td>
                        <td class="text-center">
                            <div class="w075 btn-group" role="group">
                                <a asp-controller="Device" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    Edit</a>
                                <a asp-controller="Device" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No devices</p>
    }
</div>